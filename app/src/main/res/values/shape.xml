<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Shape-->

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/small_component_corner_radius</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">@dimen/medium_component_corner_radius</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">@dimen/large_component_corner_radius</item>
    </style>

    <!--ShapeAppearance overlay for components which can be 'marked' by rounding their top left -->
    <!--corner - ie. email cards which have been starred-->
    <style name="ShapeAppearanceOverlay.App.MediumComponent.Marked" parent="">
        <item name="cornerSizeTopLeft">@dimen/small_component_corner_radius</item>
    </style>

    <dimen name="small_component_corner_radius">24dp</dimen>
    <dimen name="medium_component_corner_radius">4dp</dimen>
    <dimen name="large_component_corner_radius">12dp</dimen>

</resources>
